# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sinaesta
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-openssl-rand-base64-32
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-use-openssl-rand-base64-32

# Storage Configuration
# Options: 'local', 's3', 'minio', 'cloudflare-r2'
STORAGE_PROVIDER=local
CDN_URL=

# For S3/MinIO/Cloudflare R2 (optional - only needed if not using local storage)
# AWS_REGION=us-east-1
# S3_BUCKET=sinaesta-uploads
# S3_ENDPOINT=https://s3.amazonaws.com
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# For MinIO (self-hosted S3 compatible)
# S3_ENDPOINT=http://localhost:9000
# S3_BUCKET=sinaesta-uploads
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin

# For Cloudflare R2
# S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
# S3_BUCKET=sinaesta-uploads
# AWS_ACCESS_KEY_ID=your_r2_access_key
# AWS_SECRET_ACCESS_KEY=your_r2_secret_key

# Email Configuration
# Email provider: 'smtp', 'sendgrid', 'mailgun', 'ses'
EMAIL_PROVIDER=smtp
EMAIL_ENABLED=true
EMAIL_SANDBOX=true

# SMTP Configuration (for Gmail, Outlook, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid (alternative to SMTP)
# SENDGRID_API_KEY=your_sendgrid_api_key

# Mailgun (alternative to SMTP)
# MAILGUN_API_KEY=your_mailgun_api_key
# MAILGUN_DOMAIN=mg.yourdomain.com

# AWS SES (alternative to SMTP)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Email Addresses
EMAIL_FROM=Sinaesta <noreply@sinaesta.com>
EMAIL_FROM_SUPPORT=Sinaesta Support <support@sinaesta.com>
EMAIL_FROM_NOTIFICATIONS=Sinaesta Notifications <notifications@sinaesta.com>
EMAIL_FROM_MARKETING=Sinaesta <hello@sinaesta.com>

# Company Information (for CAN-SPAM compliance)
COMPANY_ADDRESS=Jakarta, Indonesia

# Email Features
EMAIL_TRACKING=true
EMAIL_ANALYTICS=true
TEMPLATE_CACHE_ENABLED=true
TEMPLATE_CACHE_TTL=3600

# Rate Limiting (emails per minute)
EMAIL_RATE_LIMIT=100

# Redis Configuration (for email queue - optional, uses database if not set)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
