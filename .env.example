# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sinaesta
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-openssl-rand-base64-32
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-use-openssl-rand-base64-32

# Storage Configuration
# Options: 'local', 's3', 'minio', 'cloudflare-r2'
STORAGE_PROVIDER=local
CDN_URL=

# For S3/MinIO/Cloudflare R2 (optional - only needed if not using local storage)
# AWS_REGION=us-east-1
# S3_BUCKET=sinaesta-uploads
# S3_ENDPOINT=https://s3.amazonaws.com
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key

# For MinIO (self-hosted S3 compatible)
# S3_ENDPOINT=http://localhost:9000
# S3_BUCKET=sinaesta-uploads
# AWS_ACCESS_KEY_ID=minioadmin
# AWS_SECRET_ACCESS_KEY=minioadmin

# For Cloudflare R2
# S3_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
# S3_BUCKET=sinaesta-uploads
# AWS_ACCESS_KEY_ID=your_r2_access_key
# AWS_SECRET_ACCESS_KEY=your_r2_secret_key
