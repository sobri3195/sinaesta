{
  "info": {
    "name": "Sinaesta API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Sinaesta API testing."
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@sinaesta.com\",\n  \"password\": \"admin123\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.code === 200);",
                  "const json = pm.response.json();",
                  "if (json?.data?.accessToken) {",
                  "  pm.environment.set('accessToken', json.data.accessToken);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.code === 200);",
                  "pm.test('Has user data', () => pm.response.json().data?.id);"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Exams",
      "item": [
        {
          "name": "List Exams",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/exams?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["exams"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" }
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.code === 200);"
                ]
              }
            }
          ]
        },
        {
          "name": "Create Exam",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": {
              "raw": "{{baseUrl}}/exams",
              "host": ["{{baseUrl}}"],
              "path": ["exams"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Postman Sample Exam\",\n  \"description\": \"Sample created from Postman\",\n  \"durationMinutes\": 30,\n  \"topic\": \"Internal Medicine\",\n  \"difficulty\": \"Medium\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 201 or 403', () => [201,403].includes(pm.response.code));"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Results",
      "item": [
        {
          "name": "Stats Overview",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/results/stats/overview",
              "host": ["{{baseUrl}}"],
              "path": ["results", "stats", "overview"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200 or 403', () => [200,403].includes(pm.response.code));"
                ]
              }
            }
          ]
        }
      ]
    }
  ]
}
